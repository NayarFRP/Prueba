<odoo>
  <data>
    <record id="mrp_production_inherit_mrp_ventacero" model="ir.ui.view">
      <field name="name">mrp.production.inherit.mrp.ventacero</field>
      <field name="model">mrp.production</field>
      <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
      <field name="arch" type="xml">
      
        <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='components']/field[@name='move_raw_ids']/tree[1]/field[@name='product_id']" position="after">
          <field name="product_name" optional="show"/>
        </xpath>
        
      </field>
    </record>

  </data>
</odoo>